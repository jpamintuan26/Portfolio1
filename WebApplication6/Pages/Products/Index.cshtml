@page
@model WebApplication6.Pages.Products.IndexModel
<style>
    .table {
        font-size:10px;
    }
</style>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6"
        <h2 class="text-primary">Product List</h2> <hr/>
            <a asp-page="AddNewProduct" class="btn btn-primary">
            Add New Product
        </a>
    </div>
    <div class="col-6">
    
    </div>
</div>
    <table class="table table-bordered">
    <thead>
        <tr class="bg-primary">
            <th scope="col">List</th>
            <th scope="col">Product</th>
            <th scope="col">Details</th>
            <th scope="col">QTY</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in Model.Products)
        {
        <tr>
            <th scope="row">@prod.Id</th>
            <td>@prod.ProductName</td>
            <td>@prod.ProductDetails</td>
            <td>@prod.ProductQty</td>
        </tr>
        }
    </tbody>
</table>
