@page
@model WebApplication6.Pages.Products.AddNewProductModel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.ProductList.ProductName"></label>
            <input asp-for="@Model.ProductList.ProductName" class="form-control" />
            
        </div>
        <div class="mb-3">
            <label asp-for="@Model.ProductList.ProductDetails"></label>
            <input asp-for="@Model.ProductList.ProductDetails" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="@Model.ProductList.ProductQty"></label>
            <input asp-for="@Model.ProductList.ProductQty" class="form-control" />
           
        </div>
      
        <button type="submit" class="btn btn-primary" style="width:150px;">Create</button>
    </div>
</form>